---
import { getCurrentLocale } from '../../utils/i18n';

interface Props {
  className?: string;
}

const { className = '' } = Astro.props;
const currentLocale = getCurrentLocale(Astro.url);

// For production, replace with your actual Stripe Payment Link
const stripePaymentLink = 'https://buy.stripe.com/test_example_link';

const tipText = currentLocale === 'ja' ? 'この記事を応援' : 'Support this article';
const tipDescription = currentLocale === 'ja' 
  ? '投げ銭機能は近日公開予定です。しばらくお待ちください。'
  : 'Tip functionality is coming soon. Please stay tuned.';
---

<div class={`rounded-2xl border border-stone-200 bg-gradient-to-br from-blue-50 to-indigo-50 p-6 dark:border-stone-700 dark:from-stone-800 dark:to-stone-900 ${className}`}>
  <div class="flex items-start gap-4">
    <div class="flex-shrink-0">
      <div class="flex h-12 w-12 items-center justify-center rounded-full bg-blue-100 dark:bg-blue-900">
        <svg class="h-6 w-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
        </svg>
      </div>
    </div>
    
    <div class="flex-grow">
      <h3 class="mb-2 text-lg font-semibold text-stone-900 dark:text-stone-100">
        {tipText}
      </h3>
      <p class="mb-4 text-sm text-stone-600 dark:text-stone-300">
        {tipDescription}
      </p>
      
      <button
        disabled
        class="inline-flex items-center gap-2 rounded-full bg-stone-400 px-6 py-3 text-sm font-medium text-white cursor-not-allowed opacity-60"
      >
        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        {currentLocale === 'ja' ? '近日公開' : 'Coming Soon'}
      </button>
    </div>
  </div>
  
  <div class="mt-4 border-t border-stone-200 pt-4 dark:border-stone-700">
    <div class="flex items-center justify-center text-xs text-stone-500 dark:text-stone-400">
      <span>
        {currentLocale === 'ja' ? '準備中です...' : 'Under development...'}
      </span>
    </div>
  </div>
</div>