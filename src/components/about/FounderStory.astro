---
import { getCurrentLocale, getTranslations } from '../../utils/i18n';

const currentLocale = getCurrentLocale(Astro.url);
const t = getTranslations(currentLocale);
---

<section class="py-16 sm:py-20 bg-primary-50 dark:bg-primary-950/20">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="flex flex-col gap-12 lg:gap-16">
      <!-- Header -->
      <div class="space-y-4 text-center">
        <h2 class="text-3xl font-medium tracking-tight sm:text-4xl">{t.founderStory.title}</h2>
        <p class="text-xl text-primary-600 dark:text-primary-400 font-medium">
          {t.founderStory.subtitle}
        </p>
      </div>

      <!-- Story Content -->
      <div class="mx-auto max-w-3xl">
        <div class="space-y-6">
          {t.founderStory.paragraphs.map((paragraph) => (
            <p class="text-base text-primary-950/70 dark:text-primary-200/70 sm:text-lg leading-relaxed">
              {paragraph}
            </p>
          ))}
        </div>
      </div>

      <!-- Optional: Add founder image or signature -->
      <div class="flex flex-col items-center gap-4">
        <div class="h-px w-32 bg-primary-900/10 dark:bg-primary-300/10"></div>
        <p class="text-sm text-primary-950/50 dark:text-primary-200/50">
          Kousuke Terada, CEO
        </p>
      </div>
    </div>
  </div>
</section>
