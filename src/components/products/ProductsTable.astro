---
import { getCurrentLocale, getTranslations } from '../../utils/i18n';
import RandomPlayer from '../youtube/RandomPlayer.astro';

const currentLocale = getCurrentLocale(Astro.url);
const t = getTranslations(currentLocale);
---

<section class="py-16 sm:py-20">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <!-- Products Section -->
    <div class="mb-16">
      <h2 class="mb-8 text-3xl font-medium tracking-tight sm:text-4xl">{t.productsTable.title}</h2>
      <div class="grid gap-8 lg:grid-cols-3">
        {
          t.productsTable.products.map((product) => {
            const getIconPath = (productName: string) => {
              switch (productName) {
                case 'TapForge':
                  return '/assets/tapforge.png';
                case 'BoltSite':
                  return '/assets/boltsite.png';
                case 'IoTRealm':
                  return '/assets/iotrealm.png';
                default:
                  return '';
              }
            };
            
            return (
              <a
                href={product.demo}
                target="_blank"
                rel="noopener noreferrer"
                class="relative flex flex-col gap-8 rounded-3xl bg-primary-500/10 p-8 dark:bg-primary-400/10 transition-all duration-300 hover:bg-primary-500/20 dark:hover:bg-primary-400/20 hover:scale-105 hover:shadow-lg group"
              >
                <div class="flex justify-center mb-4">
                  <img
                    src={getIconPath(product.name)}
                    alt={`${product.name} icon`}
                    class="w-16 h-16 object-contain transition-transform duration-300 group-hover:scale-110"
                    loading="lazy"
                  />
                </div>
                <div class="flex-1 text-center">
                  <h3 class="mb-4 text-xl font-medium group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors duration-300">{product.name}</h3>
                  <p class="mb-4 text-primary-950/70 dark:text-primary-200/70" set:html={product.description}></p>
                </div>
              </a>
            );
          })
        }
      </div>
    </div>

    <!-- Pricing Section -->
    <div class="mb-16">
      <h2 class="mb-8 text-3xl font-medium tracking-tight sm:text-4xl">{t.productsTable.pricing.title}</h2>
      <div class="grid gap-8 lg:grid-cols-3">
        {
          t.productsTable.pricing.services.map((service) => (
            <div class="relative flex flex-col gap-6 rounded-3xl bg-primary-500/5 p-8 dark:bg-primary-400/5">
              <h3 class="text-xl font-medium text-primary-600 dark:text-primary-400">{service.name}</h3>
              <div class="space-y-3">
                {
                  service.items.map((item) => (
                    <div class="flex justify-between items-center border-b border-primary-200/50 dark:border-primary-700/50 pb-2">
                      <span class="text-primary-950/80 dark:text-primary-200/80">{item.item}</span>
                      <span class="font-medium text-primary-600 dark:text-primary-400">{item.price}</span>
                    </div>
                  ))
                }
              </div>
            </div>
          ))
        }
      </div>
    </div>

    <!-- Media Section -->
    <h2 class="mb-8 text-center text-3xl font-medium tracking-tight sm:text-4xl">{t.productsTable.mediaTitle}</h2>
    <div class="-mt-8 flex justify-center">
      {
        t.productsTable.articles.map((item) => (
          <div
            class:list={[
              'relative flex flex-col gap-8 rounded-3xl p-8 max-w-md',
              item.isFlagged && 'bg-primary-500/10 dark:bg-primary-400/10',
            ]}
          >
            <div class="flex-1">
              <img class="mx-auto" src={item.icon} alt={item.name} loading="lazy" />
              <div class="py-6" />
              <h2 class="text-center text-4xl font-medium">{item.name}</h2>
              <p class="mt-6 text-primary-950/70 dark:text-primary-200/70">{item.description}</p>
            </div>
            <a
              href={item.action}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex w-full items-center justify-center rounded-full border border-transparent bg-primary-600 px-5 py-3 text-base font-medium text-white transition hover:bg-primary-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary-600 dark:bg-primary-400 dark:text-primary-950 dark:hover:bg-primary-300 dark:focus-visible:outline-primary-400"
            >
              Go {item.name}
            </a>
          </div>
        ))
      }
    </div>
    <div class="py-16"></div>
    <div class="mx-auto max-w-4xl">
      {
        t.productsTable.youtube.map((item) => (
          <div
            class:list={[
              'relative flex flex-col gap-8 rounded-3xl p-8',
              item.isFlagged && 'bg-primary-500/10 dark:bg-primary-400/10',
            ]}
          >
            <div class="flex-1">
              <RandomPlayer />
              <div class="py-4" />
              <h2 class="text-center text-4xl font-medium">{item.name}</h2>
              <p class="mt-6 text-center text-primary-950/70 dark:text-primary-200/70">
                {item.description}
              </p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
