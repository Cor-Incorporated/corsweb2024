---
import '@fontsource/inter/latin-400.css';
import '@fontsource/inter/latin-500.css';
import { ViewTransitions } from 'astro:transitions';
import Footer from '../components/layout/Footer.astro';
import Header from '../components/layout/Header.astro';
import WebVitals from '../components/performance/WebVitals.astro';

interface Props {
  description: string;
  title: string;
}

const { description, title } = Astro.props;
---

<!doctype html>
<html lang="en" x-cloak x-data :class="{ 'dark': $store.theme.isDark }">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="favicon-32×32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="preconnect" href="https://esm.sh" crossorigin>
    <link rel="preconnect" href="https://www.google.com" crossorigin>
    <link rel="dns-prefetch" href="https://ssgform.com"></link>

    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body
    class="bg-primary-50 text-primary-950 antialiased transition dark:bg-primary-950 dark:text-primary-200"
  >
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
    <WebVitals />
    <style is:global>
      [x-cloak] {
        display: none !important;
      }
      
      @font-face {
        font-family: 'Inter';
        font-display: swap;
      }
      
      /* Critical CSS for above-the-fold content */
      .hero-critical {
        font-family: 'Inter', sans-serif;
        line-height: 1.2;
        letter-spacing: -0.025em;
      }
      
      .header-critical {
        background-color: rgb(249 250 251);
        transition: all 0.15s ease-in-out;
      }
      
      .dark .header-critical {
        background-color: rgb(23 23 23);
      }
      
      .btn-primary-critical {
        background-color: rgb(37 99 235);
        color: white;
        border-radius: 9999px;
        padding: 0.75rem 1.25rem;
        font-weight: 500;
        transition: background-color 0.15s ease-in-out;
      }
      
      .btn-primary-critical:hover {
        background-color: rgb(29 78 216);
      }
    </style>
    <!-- Alpine.jsの読み込み時に、type="module"をつける+lang="ts"をつけることで、typescriptを使うことができる -->
    <script type="module" lang="ts" is:inline>
      import Alpine from 'alpinejs';
      import collapse from '@alpinejs/collapse';

      Alpine.plugin(collapse);

      Alpine.store('theme', {
        isDark: false,
        init() {
          this.isDark = (() => {
            if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
              return localStorage.getItem('theme') === 'dark';
            }
            if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
              return true;
            }
            return false;
          })();
        },
        toggle() {
          this.isDark = !this.isDark;
          localStorage.setItem('theme', this.isDark ? 'dark' : 'light');
        },
      });

      window.Alpine = Alpine;
      Alpine.start();
    </script>
  </body>
</html>
